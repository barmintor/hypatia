<div class="files metadata-section">
  <h2 class="section-title">Files</h2>
  <span class="show-hide" style="display:none;">Hide Section</span>
  <div class="toggle-section">
    <table id="file_assets" class="files">
      <thead>
        <tr>
          <th>Name</th>
          <th>Size</th>
          <th>Mimetype</th>
        </tr>
      </thead>
      <tbody>
    	  <tr class="file_asset<%= cycle(" odd", " even") -%>" >
        	  <td>
        	    <% dd_filename = get_values_from_datastream(@document_fedora, "contentMetadata", :dd_filename) -%>
        	    <% dd_pid = get_values_from_datastream(@document_fedora, "contentMetadata", :dd_fedora_pid) -%>
        	    <% dd_ds_id = get_values_from_datastream(@document_fedora, "contentMetadata", :dd_ds_id).first -%>
              <%= link_to dd_filename, asset_downloads_path(dd_pid, :download_id=>dd_ds_id) %>
            </td>
        	  <td>
              <%= get_values_from_datastream(@document_fedora, "contentMetadata", :dd_size) %> bytes
        	  </td>
        	  <td>
              <%= get_values_from_datastream(@document_fedora, "contentMetadata", :dd_mimetype) %>
        	  </td>
        	</tr>
      </tbody>
    </table>
  </div>
</div>
