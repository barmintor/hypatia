            <%= display_ds_values_as_dl_element("contentMetadata", :image_front_md5, "Front Image md5 Checksum") %>
            <%= display_ds_values_as_dl_element("contentMetadata", :image_front_sha1, "Front Image sha1 Checksum") %>
            <%= display_ds_values_as_dl_element("contentMetadata", :image_front_size, "Front Image size") %>
            <%= display_ds_values_as_dl_element("contentMetadata", :image_front_mimetype, "Front Image mimetype") %>
        </dl>
      </div>
      <div class="contentMetadata metadata-subsection">
        <h3 class="subsection-title">Image of Disk - Back</h3>
          <dl class="disk-image-metadata-list">
            <%= display_ds_values_as_dl_element("contentMetadata", :image_back_filename, "Back Image Filename") %>
            <%= display_ds_values_as_dl_element("contentMetadata", :image_back_fedora_pid, "Back Image File Object Id") %>
            <%= display_ds_values_as_dl_element("contentMetadata", :image_back_ds_id, "Back Image Datastream ID") %>
