<div class="techInfo metadata-section">
  <h2 class="section-title">Technical Information</h2>
  <span class="show-hide" style="display:none;">Hide Section</span>
  <div class="toggle-section">
    <div class="contentMetadata metadata-subsection">
      <h3 class="subsection-title">Disk Image File</h3>
        <dl class="disk-image-metadata-list">
          <%= display_ds_values_as_dl_element("contentMetadata", :dd_filename, "DD Filename") %>
          <%= display_ds_values_as_dl_element("contentMetadata", :dd_fedora_pid, "DD File Object Id") %>
          <%= display_ds_values_as_dl_element("contentMetadata", :dd_ds_id, "DD Datastream ID") %>
          <%= display_ds_values_as_dl_element("contentMetadata", :dd_md5, "DD md5 Checksum") %>
          <%= display_ds_values_as_dl_element("contentMetadata", :dd_sha1, "DD sha1 Checksum") %>
          <%= display_ds_values_as_dl_element("contentMetadata", :dd_size, "DD size") %>
          <%= display_ds_values_as_dl_element("contentMetadata", :dd_mimetype, "DD mimetype") %>
        </dl>
      </div>
      <div class="contentMetadata metadata-subsection">
        <h3 class="subsection-title">Image of Disk - Front</h3>
          <dl class="disk-image-metadata-list">
            <%= display_ds_values_as_dl_element("contentMetadata", :image_front_filename, "Front Image Filename") %>
