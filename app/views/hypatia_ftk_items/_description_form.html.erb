<%- form_tag(url_for(:controller=>"assets", :action=>"update", :id=>params[:id]), :class => "step") do -%>
  <div class="descMetadata metadata-section">
    <h2 class="section-title">Description</h2>
    <div class="descMetadata metadata-subsection">
      <h3 class="subsection-title">File</h3>
      <div>
        <p id="filename_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [:filename], "File Name") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [:filename], :multiple=>false, :required=>false, :disabled=>true ) %>
        </p>
        <p id="filepath_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [:filepath], "File Path") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [:filepath], :multiple=>false, :required=>false ) %>
        </p>
        <p id="filetype_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [:filetype], "File Type") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [:filetype], :multiple=>false, :required=>false ) %>
        </p>
        <p id="extent_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [:extent], "Extent") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [:extent], :multiple=>true, :required=>false ) %>
        </p>
        <p id="digital_origin_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [:digital_origin], "Digital Origin") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [:digital_origin], :multiple=>false, :required=>false ) %>
        </p>
        <p id="date_created_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [:date_created], "Date Created") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [:date_created], :multiple=>false, :required=>false, :disabled=>true ) %>
        </p>
        <p id="date_last_modified_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [:date_last_modified], "Date Last Modified") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [:date_last_modified], :multiple=>false, :required=>false, :disabled=>true ) %>
        </p>
        <p id="date_last_accessed_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [:date_last_accessed], "Date Last Accessed") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [:date_last_accessed], :multiple=>false, :required=>false, :disabled=>true ) %>
        </p>
        <p id="addl_title_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [:addl_title], "Title from Contents") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [:addl_title], :multiple=>false, :required=>false ) %>
        </p>
        <p id="note_plain_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [:note_plain], "Note") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [:note_plain], :multiple=>false, :required=>false ) %>
        </p>
      </div>
    </div>
    <div class="descMetadata metadata-subsection">
      <h3 class="subsection-title">Repository</h3>
      <div>
        <p id="ftk_id_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [:ftk_id], "Local FTK Identifier") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [:ftk_id], :multiple=>false, :required=>false, :disabled=>true ) %>
        </p>
      </div>
    </div>
  </div>
  <%= hidden_field_tag("_method","put", :id=>"description_method") %>
  <%= hidden_field_tag(:wf_step, params[:wf_step], :id => "description_wf_step") %>
  <%= hidden_field_tag(:new_asset, true, :id => "description_new_asset") if params[:new_asset] %>
  <%= hidden_field_tag(:content_type,"hypatia_ftk_item", :id => "description_content_type") %>
  <%= submit_tag(submit_name, :name=>"continue", :class=>"save-submit") %>
  <%= submit_tag("Save and Finish", :name=>"finish", :class=>"save-submit") unless params[:new_asset] %>
<%- end -%>


