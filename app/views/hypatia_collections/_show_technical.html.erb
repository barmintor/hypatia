<div class="techInfo metadata-section">
  <h2 class="section-title">Technical Information</h2>
  <span class="show-hide" style="display:none;">Show Section</span>
  <div class="toggle-section start-shut">
    <div class="contentMetadata metadata-subsection">
      <h3 class="subsection-title">EAD File</h3>
      <dl class="collection-metadata-list">
        <%= display_ds_values_as_dl_element("contentMetadata", :ead_filename, "File Name") %>
        <%= display_ds_values_as_dl_element("contentMetadata", :ead_size, "Size") %>
        <%= display_ds_values_as_dl_element("contentMetadata", :ead_mimetype, "Mimetype") %>
        <%= display_ds_values_as_dl_element("contentMetadata", :ead_md5, "md5 Checksum") %>
        <%= display_ds_values_as_dl_element("contentMetadata", :ead_sha1, "sha1 Checksum") %>
        <%= display_ds_values_as_dl_element("contentMetadata", :ead_fedora_pid, "FileAsset Object Id") %>
        <%= display_ds_values_as_dl_element("contentMetadata", :ead_ds_id, "Datastream ID") %>
      </dl>
    </div>
    <div class="contentMetadata metadata-subsection">
      <h3 class="subsection-title">Image for Collection</h3>
      <dl class="collection-metadata-list">
        <%= display_ds_values_as_dl_element("contentMetadata", :image_filename, "File Name") %>
        <%= display_ds_values_as_dl_element("contentMetadata", :image_size, "Size") %>
        <%= display_ds_values_as_dl_element("contentMetadata", :image_mimetype, "Mimetype") %>
        <%= display_ds_values_as_dl_element("contentMetadata", :image_md5, "md5 Checksum") %>
        <%= display_ds_values_as_dl_element("contentMetadata", :image_sha1, "sha1 Checksum") %>
        <%= display_ds_values_as_dl_element("contentMetadata", :image_fedora_pid, "FileAsset Object Id") %>
        <%= display_ds_values_as_dl_element("contentMetadata", :image_ds_id, "Datastream ID") %>
      </dl>
    </div>
  </div>
</div>
