<%= form_tag(url_for(:controller=>"assets", :action=>"update", :id=>params[:id]), :class => "step") do -%>
  <div class="descMetadata metadata-section">
    <h2 class="section-title">Description</h2>
    <div class="descMetadata metadata-subsection">
      <h3 class="subsection-title">Item</h3>
      <div>
        <p id="title_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [{:main_title_info=>0},:main_title], "Title") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [{:main_title_info=>0},:main_title], :multiple=>false, :required=>true ) %>
        </p>
        <p id="extent_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [{:type_of_resource=>0}], "Type") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [{:type_of_resource=>0}], :multiple=>false, :required=>false ) %>
        </p>
        <p id="extent_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [{:abstract=>0}], "Abstract") %>
          <%= fedora_text_area(@document_fedora,"descMetadata", [{:abstract=>0}], :multiple=>false, :required=>false ) %>
        </p>
        <p id="project_field" class="fedora-select">
          <%= fedora_field_label("descMetadata", [{:project=>0},:project_title_info, :lib_project], "Project") %>
          <%= fedora_select(@document_fedora,"descMetadata", [{:project=>0},:project_title_info, :lib_project], :choices=>options_for_value_map(:project_facet,true),:multiple=>false, :required=>false, :disabled=>false ) %>
	    </p>
    </div>
    <div class="descMetadata metadata-subsection">
      <h3 class="subsection-title">Physical Description</h3>
      <div>
        <p id="extent_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [{:physical_description=>0},:extent], "Extent") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [{:physical_description=>0},:extent], :multiple=>false, :required=>false ) %>
        </p>
        <p id="extent_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [{:physical_description=>0},:form_aat], "Form") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [{:physical_description=>0},:form_aat], :multiple=>false, :required=>false ) %>
        </p>
      </div>
    </div>
  </div>
    <div class="descMetadata metadata-subsection">
      <h3 class="subsection-title">Repository</h3>
      <div>
        <p id="local_id_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [{:identifier=>0}], "Unique Local Identifier") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [{:identifier=>0}], :multiple=>false, :required=>false, :disabled=>false ) %>
        </p>
        <p id="repo_code_field" class="fedora-select">
          <%= fedora_field_label("descMetadata", [{:location=>0}, :repo_code], "Repository") %>
          <%= fedora_select(@document_fedora,"descMetadata", [{:location=>0}, :repo_code], :choices=>options_for_value_map(:marc_to_display),:multiple=>false, :required=>false, :disabled=>false ) %>
	    </p>
        <p id="shelf_locator_field" class="fedora-text-field">
          <%= fedora_field_label("descMetadata", [{:location=>0}, :shelf_locator], "Shelf Locator") %>
          <%= fedora_text_field(@document_fedora,"descMetadata", [{:location=>0}, :shelf_locator], :multiple=>false, :required=>false, :disabled=>false ) %>
	    </p>
      </div>
    </div>
  </div>
  <%= hidden_field_tag("_method","put", :id=>"description_method") %>
  <%= hidden_field_tag(:wf_step, params[:wf_step], :id => "description_wf_step") %>
  <%= hidden_field_tag(:new_asset, true, :id => "description_new_asset") if params[:new_asset] %>
  <%= hidden_field_tag(:content_type,"static_image_aggregator", :id => "description_content_type") %>
  <%= submit_tag(submit_name, :name=>"continue", :class=>"save-submit") %>
  <%= submit_tag("Save and Finish", :name=>"finish", :class=>"save-submit") unless params[:new_asset] %>
<%- end -%>